/*back-to-top按钮美化*/
.back-to-top.back-to-top-on {
    bottom: unset;
    top: calc(100vh - 900px - 200px);
}

.back-to-top {
    width: 70px;
    height: 360px;
    top: -900px;
    bottom: unset;
    transition: all 0.5s ease-in-out;
    background: url("https://site-1258928558.cos.ap-guangzhou.myqcloud.com/scroll.png");
}

.back-to-top {
    box-sizing: border-box;
    position: fixed;
    z-index: 1050;
    padding: 0 6px;
    font-size: 12px;
    opacity: 1;
    color: #fff;
    cursor: pointer;
    text-align: center;
 }


 